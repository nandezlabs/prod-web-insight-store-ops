#!/bin/bash
# Git Hook: Auto-push on tag creation

TAG_NAME="$1"

echo "üè∑Ô∏è  Tag '$TAG_NAME' created - Auto-pushing to GitHub..."

# Push the tag to remote
if git remote get-url origin > /dev/null 2>&1; then
    git push origin "$TAG_NAME"
    
    if [ $? -eq 0 ]; then
        echo "‚úÖ Tag pushed to GitHub!"
    else
        echo "‚ùå Failed to push tag. Please push manually: git push origin $TAG_NAME"
    fi
else
    echo "‚ö†Ô∏è  No remote repository configured."
fi

exit 0
